@using Microsoft.AspNetCore.Http
@model KalustoLuetteloSovellus.Models.Käyttäjä
@{
    ViewData["Title"] = "User";
}

<h1>Omat sivut</h1>


<br />
<a class="btn btn-main float-end" asp-controller="Home" onclick="return confirm('Haluatko varmasti poistaa tilin?')" asp-action="DeleteAccount" asp-route-käyttäjäId="@Model.KäyttäjäId"><i class="fas fa-trash"></i> Poista tili</a>
<h2 >Käyttäjätunnus: @Model.Käyttäjätunnus</h2>
<h3>Rooli: @Model.Rooli.RooliNimi</h3>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus-circle"></i> Luo palautusrivi</a>
</p>

<br />
<h5>Käyttäjän luomat tapahtumat</h5>
@await Html.PartialAsync("_TapahtumaRivitPartial", Model.Tapahtumat)
