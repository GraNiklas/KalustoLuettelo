@model KalustoLuetteloSovellus.Models.Kategoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Poista</h1>

<h3>Haluatko varmasti poistaa tämän?</h3>
<div>
    <h4>Kategoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KategoriaNimi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KategoriaNimi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="KategoriaId" />
        <div class=" d-flex mt-2 gap-2 mb-4">
            <div class="form-group">
                <div class="btn btn-danger">
                    <i class="fas fa-trash"></i>
                    <input type="submit" value="Poista" style="background:none;border:none;color:white" />
                </div>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-secondary" onclick="window.history.back()">
                    <i class="fas fa-arrow-left"></i> Takaisin
                </button>
            </div>
        </div>
    </form>
</div>
