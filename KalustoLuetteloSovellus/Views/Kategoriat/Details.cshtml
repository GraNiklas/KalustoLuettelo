@model KalustoLuetteloSovellus.Models.Kategoria

@{
    ViewData["Title"] = "Details";
}

<h1>Tiedot</h1>

<div>
    <h4>Kategoria</h4>
    <hr />

    @* Tästä alkaa tapahtumatietojen katseluäkymä *@

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KategoriaNimi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KategoriaNimi)
        </dd>
    </dl>
</div>
<div class="d-flex mt-2 gap-2 mb-4">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.KategoriaId"><i class="fas fa-edit"></i>Muokkaa</a>
    <button class="btn btn-secondary" onclick="window.history.back()"><i class="fas fa-arrow-left"></i>Takaisin</button>
</div>