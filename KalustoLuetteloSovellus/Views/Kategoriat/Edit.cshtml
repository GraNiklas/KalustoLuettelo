@model KalustoLuetteloSovellus.Models.Kategoria

@{
    ViewData["Title"] = "Edit";
}

<h1>Muokkaa</h1>

<h4>Kategoria</h4>
<hr />

@* Tästä alkaa tapahtuman muokkausäkymä *@

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KategoriaId" />
            <div class="form-group">
                <label asp-for="KategoriaNimi" class="control-label"></label>
                <input asp-for="KategoriaNimi" class="form-control" />
                <span asp-validation-for="KategoriaNimi" class="text-danger"></span>
            </div>
            <div class="d-flex mt-2 gap-2 mb-4">
                <div class="form-group">
                    <div class="btn btn-primary" >
                        <i class="fas fa-save"></i>
                        <input type="submit" value="Tallenna" style="background:none;border:none;color:white"/>
                    </div>
                </div>
                <button type="button" class="btn btn-secondary" onclick="window.history.back()">
                    <i class="fas fa-arrow-left"></i> Takaisin
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
