@model KalustoLuetteloSovellus.Models.Käyttäjä

@{
    ViewData["Title"] = "Create";
}

<h1>Lisää uusi Käyttäjä</h1>

<h4>Käyttäjä</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Käyttäjätunnus" class="control-label"></label>
                <input asp-for="Käyttäjätunnus" class="form-control" />
                <span asp-validation-for="Käyttäjätunnus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salasana" class="control-label"></label>
                <input asp-for="Salasana" class="form-control" />
                <span asp-validation-for="Salasana" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RooliId" class="control-label"></label>
                <select asp-for="RooliId" class ="form-control" asp-items="ViewBag.RooliId"></select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Lisää uusi</button>
                <a class="btn btn-light" asp-action="Index"><i class="fa-solid fa-circle-left"></i> Takaisin</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
