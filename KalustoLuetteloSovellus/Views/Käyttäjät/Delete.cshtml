@model KalustoLuetteloSovellus.Models.Käyttäjä

@{
    ViewData["Title"] = "Delete";
}
<div class="ms-auto me-auto">
    <h1>Poista käyttäjä</h1>
    <h3>Haluatko varmasti poistaa tämän?</h3>
    <h4>Käyttäjä</h4>
    <hr />

    @* Tästä alkaa tapahtuman poistonäkymä *@

    <dl class="row">
        <div class="col-md-12">
            <dt class="col-sm-2 text-start">@Html.DisplayNameFor(model => model.Käyttäjätunnus)</dt>
            <dd class="col-sm-10 text-start">@Html.DisplayFor(model => model.Käyttäjätunnus)</dd>
            @*<dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Salasana)</dt>
            <dd class = "col-sm-10">@Html.DisplayFor(model => model.Salasana)</dd> *@
            <dt class="col-sm-2 text-start">@Html.DisplayNameFor(model => model.Rooli)</dt>
            <dd class="col-sm-10 text-start">@Html.DisplayFor(model => model.Rooli.RooliNimi)</dd>
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="KäyttäjäId" />
        <div class="d-flex mt-2 gap-2 mb-4">
            <div class="form-group">
                <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Poista</button>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-secondary" onclick="window.history.back()"><i class="fas fa-arrow-left"></i> Takaisin</button>
            </div>
        </div>
    </form>
</div>