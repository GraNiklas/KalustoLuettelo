@model KalustoLuetteloSovellus.Models.Käyttäjä

@{
    ViewData["Title"] = "Delete";
}

<h1>Poista käyttäjä</h1>

<h3>Haluatko varmasti poistaa tämän?</h3>
<div>
    <h4>Käyttäjä</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Käyttäjätunnus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Käyttäjätunnus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salasana)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salasana)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rooli)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rooli.RooliNimi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="KäyttäjäId" />
        <div class="d-flex mt-2">
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Poista</button>
            <a class="btn btn-secondary ms-2" asp-action="Index"><i class="fa-solid fa-circle-left"></i> Takaisin</a>
    </form>
</div>
