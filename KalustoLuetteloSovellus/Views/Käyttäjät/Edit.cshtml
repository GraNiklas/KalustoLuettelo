@model KalustoLuetteloSovellus.Models.Käyttäjä

@{
    ViewData["Title"] = "Edit";
}
<div class="ms-auto me-auto">
    <h1>Muokkaa käyttäjä</h1>

    <h4>Käyttäjä</h4>
    <hr />

    @* Tästä alkaa tapahtuman muokkausäkymä *@

    <div class="row">
        <div class="col-md-12">        
            <form asp-action="Edit">           
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="KäyttäjäId" />
                <div class="form-group">
                    <label asp-for="Käyttäjätunnus" class="control-label fw-bold text-start w-100"></label>
                    <input asp-for="Käyttäjätunnus" class="form-control mb-2" />
                    <span asp-validation-for="Käyttäjätunnus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @* <label asp-for="Salasana" class="control-label fw-bold text-start w-100"></label> *@
                    <input asp-for="Salasana" class="form-control" hidden/>
                    <span asp-validation-for="Salasana" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RooliId" class="control-label fw-bold text-start w-100">Rooli</label>
                    <select asp-for="RooliId" class="form-control mb-2" asp-items="ViewBag.RooliId"></select>
                    <span asp-validation-for="RooliId" class="text-danger"></span>
                </div>
                <div class="d-flex mt-2 gap-2 mb-4">
                    <div class="form-group">                        
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Tallenna</button>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-secondary" onclick="window.history.back()"><i class="fas fa-arrow-left"></i> Takaisin</button>
                    </div>
                </div>
            </form>       
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
