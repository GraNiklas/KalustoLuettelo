@model IEnumerable<KalustoLuetteloSovellus.Models.Käyttäjä>

@{
    ViewData["Title"] = "Index";
}

<h1>Käyttäjät</h1>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus-circle"></i> Lisää uusi</a>
</p>
<div class="d-flex gap-2">
    <p>Kaikki tuotteet: <strong>@ViewData["Kaikki"]</strong></p>
    <p>Näytetyt tuotteet: <strong>@ViewData["Suodatetut"]</strong></p>
</div>

<form method="get" class="d-flex gap-2 mb-4">

    <div class="form-group">
        <label>Kuvaus</label>
        <input type="text" name="käyttäjäNimi" class="form-control" value="@(Context.Request.Query["käyttäjäNimi"])" placeholder="Etsi Käyttäjä nimellä..." />
    </div>


    <div class="form-group">
        <label>Rooli</label>
        <select name="rooliId" class="form-control" asp-items="ViewBag.rooliId">
            <option value="">Kaikki</option>
        </select>
    </div>

    <div class="form-group align-self-end">
        <button type="submit" class="btn btn-main"><i class="fas fa-filter"></i> Suodata</button>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Käyttäjätunnus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salasana)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooli)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Käyttäjätunnus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salasana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rooli.RooliNimi)
            </td>
            <td>
                    <a class="btn btn-main" asp-action="Edit" asp-route-id="@item.KäyttäjäId"><i class="fas fa-edit"></i></a> 
                    <a class="btn btn-main" asp-action="Details" asp-route-id="@item.KäyttäjäId"><i class="fas fa-search"></i></a> 
                    <a class="btn btn-main" asp-action="Delete" asp-route-id="@item.KäyttäjäId"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
