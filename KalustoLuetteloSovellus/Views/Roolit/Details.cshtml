    ViewData["Title"] = "Details";
}

<h1>Tiedot</h1>

<div class="ms-auto me-auto">
    <h4>Rooli</h4>
    <hr />

    @* Tästä alkaa tapahtumatietojen katseluäkymä *@

    <dl class="row">
        <div class="col-md-2">
            <dt class="col-sm-2 text-nowrap">@Html.DisplayNameFor(model => model.RooliNimi)</dt>
