@model IEnumerable<KalustoLuetteloSovellus.Models.Rooli>

@{
    ViewData["Title"] = "Index";
}

<h1>Roolit</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@* Lisää uusi rooli linkki *@

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus-circle"></i> Lisää uusi</a>
</p>

@* Tästä alkaa roolien listanäkymä *@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RooliId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RooliNimi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RooliId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RooliNimi)
            </td>
            <td>
                <a class="btn btn-main" asp-action="Edit" asp-route-id="@item.RooliId"><i class="fas fa-edit"></i></a>
                <a class="btn btn-main" asp-action="Details" asp-route-id="@item.RooliId"><i class="fas fa-search"></i></a>
                <a class="btn btn-main" asp-action="Delete" asp-route-id="@item.RooliId"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
