@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
@{

    var käyttäjä = Context.Session.GetString("Käyttäjätunnus"); 
    var isAdmin = RoleHelper.IsAdmin(Context);
    var isLoggedIn = !string.IsNullOrEmpty(käyttäjä);
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KalustoLuetteloSovellus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KalustoLuetteloSovellus.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" type="text/css" href="\css\kalu_rewrite.css">
</head>
<body>

    @{
        await Html.RenderPartialAsync("_Navbar");
    }

    <div class="container body-content">
        @RenderBody()
    </div>

    @* Directly include jQuery *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @* Directly include Bootstrap JS *@
@*     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> *@

    @RenderSection("scripts", required: false)

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - KalustoLuetteloSovellus - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
