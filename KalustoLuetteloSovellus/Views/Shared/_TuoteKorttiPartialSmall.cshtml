@model KalustoLuetteloSovellus.Models.Tuote

<div class="carousel-item carousel-item-small col-md-4 mb-6" style="border:2px solid gray;border-radius:8px; padding:16px;margin:16px">
    <div>
        <div class="d-flex flex-column">
            <div class="d-flex">
                <h1 style="white-space:nowrap;overflow:hidden;text-overflow:ellipsis;width:100%;font-size:1.2rem">
                    @Html.DisplayFor(model => model.Kuvaus)
                </h1>
                @await Html.PartialAsync("_StatusPartial",Model.Status)
                <hr />
            </div>
            <div class="d-flex flex-column ">
                <div class="d-flex flex-column">
                    <dl>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdNumero)
                        </dd>
                    </dl>
                </div>
                <div class="d-flex">
                    <dl>
                        <dd class="col-sm-10">
                            <div class="d-flex" style="border:2px solid gray;border-radius:16px; padding:2px;margin:16px;width:100%">
                                @if (Model.Kuva != null && Model.Kuva.Length > 0)
                                {
                                <img class="" style="width:100px;height:100px;object-fit:cover;border-radius:16px" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Kuva)" alt="Tuote kuva" />
                                }
                                else
                                {
                                <div style="width: 64px;height: 64px; background-color: lightgray; border-radius: 16px;"></div>
                                }
                            </div>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

    </div>
