@* Kotisivulla olevan tuotestatuskorttinäkymän partial view *@

@model IEnumerable<KalustoLuetteloSovellus.Models.Tuote>

<link rel="stylesheet" href="~/css/statusbadge.css" />


<div class="d-flex flex-column justify-content-center text-center " >
    <div class=" m-3">
        <div class="card h-100 d-flex align-items-center justify-content-center">
            <div class="card-body">
                <div style="position: absolute; top: 10px; right: 20px;">
                @{
                    var statusVarattu = new KalustoLuetteloSovellus.Models.Status { StatusNimi = "Varattu" };
                }
                @await Html.PartialAsync("_StatusPartial", statusVarattu)
                </div>
                <h5 class="card-title" style="pointer-events:none;" @*Lisäsin tämän manuaalisesti koska en löytänyt Luokkaa tyyle tiedostoista*@>Varatut</h5>
                <p class="card-text" style="pointer-events:none;" @*Lisäsin tämän manuaalisesti koska en löytänyt Luokkaa tyyle tiedostoista*@>Katso varatut tuotteet</p>
                <a class="btn btn-primary" asp-action="Varatuttuotteet" asp-controller="Tuotteet"><i class="fas fa-arrow-right"></i> Valitse</a>
            </div>
        </div>
    </div>
    <div class=" m-3">
        <div class="card h-100 d-flex align-items-center justify-content-center">
            <div class="card-body">
                <div style="position: absolute; top: 10px; right: 20px;">                
                @{
                    var statusHuollossa = new KalustoLuetteloSovellus.Models.Status { StatusNimi = "Huollossa" };
                }
                @await Html.PartialAsync("_StatusPartial", statusHuollossa)
                </div>
                <h5 class="card-title" style="pointer-events:none;" @*Lisäsin tämän manuaalisesti koska en löytänyt Luokkaa tyyle tiedostoista*@>Huollossa</h5>
                <p class="card-text" style="pointer-events:none;" @*Lisäsin tämän manuaalisesti koska en löytänyt Luokkaa tyyle tiedostoista*@>Katso huollossa olevat tuotteet</p>
                <a class="btn btn-primary" asp-action="Huollossatuotteet" asp-controller="Tuotteet"><i class="fas fa-arrow-right"></i> Valitse</a>
            </div>
        </div>
    </div>
    <div class=" m-3">
        <div class="card h-100 d-flex align-items-center justify-content-center">
            <div class="card-body">
                <div style="position: absolute; top: 10px; right: 20px;">
                @{
                    var statusVapaa = new KalustoLuetteloSovellus.Models.Status { StatusNimi = "Vapaa" };
                }
                @await Html.PartialAsync("_StatusPartial", statusVapaa)
                </div>
                <h5 class="card-title" style="pointer-events:none;" @*Lisäsin tämän manuaalisesti koska en löytänyt Luokkaa tyyle tiedostoista*@>Vapaana</h5>
                <p class="card-text" style="pointer-events:none;" @*Lisäsin tämän manuaalisesti koska en löytänyt Luokkaa tyyle tiedostoista*@>Katso vapaana olevat tuotteet</p>
                <a class="btn btn-primary" asp-action="Vapaanatuotteet" asp-controller="Tuotteet"><i class="fas fa-arrow-right"></i> Valitse</a>
            </div>
        </div>
    </div>
</div>



