@model IEnumerable<KalustoLuetteloSovellus.Models.Tuote>

<div class="row justify-content-center text-center">
    <div class="col-md-4 mb-3">
        <div class="card h-100 d-flex align-items-center justify-content-center">
            <div class="card-body">
                <h5 class="card-title">Varatut</h5>
                <p class="card-text">Katso varatut tuotteet</p>
                <a class="btn btn-primary" asp-action="Varatuttuotteet" asp-controller="Tuotteet">Valitse</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100 d-flex align-items-center justify-content-center">
            <div class="card-body">
                <h5 class="card-title">Huollossa</h5>
                <p class="card-text">Katso huollossa olevat tuotteet</p>
                <a class="btn btn-primary" asp-action="Huollossatuotteet" asp-controller="Tuotteet">Valitse</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100 d-flex align-items-center justify-content-center">
            <div class="card-body">
                <h5 class="card-title">Vapaana</h5>
                <p class="card-text">Katso vapaana olevat tuotteet</p>
                <a class="btn btn-primary" asp-action="Vapaanatuotteet" asp-controller="Tuotteet">Valitse</a>
            </div>
        </div>
    </div>
</div>


