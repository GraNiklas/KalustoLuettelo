@model KalustoLuetteloSovellus.Models.Status

@{
    ViewData["Title"] = "Create";
}

<h1>Uusi status</h1>

<h4>Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StatusNimi" class="control-label"></label>
                <input asp-for="StatusNimi" class="form-control" />
                <span asp-validation-for="StatusNimi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Lisää uusi</button>
                <a class="btn btn-light" asp-action="Index"><i class="fa-solid fa-circle-left"></i> Takaisin</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
