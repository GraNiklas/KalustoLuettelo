@model KalustoLuetteloSovellus.Models.Status

@{
    ViewData["Title"] = "Delete";
}

<h1>Poista</h1>

<h3>Haluatko varmasti poistaa tämän?</h3>
<div>
    <h4>Status</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatusNimi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusNimi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="d-flex mt-2">
        <input type="hidden" asp-for="StatusId" />
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Poista</button>
            <div class="form-group">
                <button type="button" class="btn btn-secondary" onclick="window.history.back()">
                    <i class="fas fa-arrow-left"></i> Takaisin
                </button>
            </div>
    </form>
</div>
