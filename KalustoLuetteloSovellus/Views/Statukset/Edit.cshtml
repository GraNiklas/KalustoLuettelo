@model KalustoLuetteloSovellus.Models.Status

@{
    ViewData["Title"] = "Edit";
}
<div class="ms-auto me-auto">
    <h1>Muokkaa</h1>

    <h4>Status</h4>
    <hr />

    @* Tästä alkaa tapahtuman muokkausäkymä *@

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StatusId" />
                <div class="form-group">
                    <label asp-for="StatusNimi" class="control-label fw-bold text-start w-100"></label>
                    <input asp-for="StatusNimi" class="form-control mb-2" />
                    <span asp-validation-for="StatusNimi" class="text-danger"></span>
                </div>
                <div class="d-flex mt-2 gap-2 mb-4">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Tallenna</button>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-secondary" onclick="window.history.back()"><i class="fas fa-arrow-left"></i> Takaisin</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
