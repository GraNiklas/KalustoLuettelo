
@model KalustoLuetteloSovellus.Models.Tapahtuma

@{
    ViewData["Title"] = "Create";
    var date = DateTime.Today.ToString("yyyy-MM-dd");
    @* value="@date" *@ 
}

<h1>Uusi tapahtuma</h1>

<h4>Tapahtuma</h4>
<hr />
<div class="d-flex flex-row gap-5">
    <div class="row col-4">
        <div class="col-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Tuote.IdNumero" class="control-label"></label>
                    <p class="form-control">@Model.Tuote.IdNumero</p>
                    @* <select asp-for="Tuote.IdNumero" class="form-control" asp-items="ViewBag.Idnumero" disabled></select> *@
                </div>
                <div class="form-group">
                    <label asp-for="Tuote.Kuvaus" class="control-label"></label>
                    <p class="form-control">@Model.Tuote.Kuvaus</p>
                    @* <select asp-for="Tuote.Kuvaus" class="form-control" asp-items="ViewBag.Kuvaus" disabled></select> *@
                </div>
                <div class="form-group">
                    <label asp-for="AloitusPvm" class="control-label"></label>
                    <input asp-for="AloitusPvm" class="form-control" type="date" />
                    <span asp-validation-for="AloitusPvm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LopetusPvm" class="control-label"></label>
                    <input asp-for="LopetusPvm" class="form-control" type="date" />
                    <span asp-validation-for="LopetusPvm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Kommentti" class="control-label"></label>
                    <input asp-for="Kommentti" class="form-control" />
                    <span asp-validation-for="Kommentti" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StatusId" class="control-label"></label>
                    <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusNimi"></select>
                </div>
                <input type="hidden" asp-for="KäyttäjäId" />
                <input type="hidden" asp-for="TuoteId" />
                <div class="d-flex mt-2">
                    <div class="form-group">
                        <div class="btn btn-primary">
                            <i class="fas fa-save"></i>
                            <input type="submit" value="Tallenna" style="background:none;border:none;color:white" />
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-secondary ms-2" asp-controller="Home" asp-action="Index"><i class="fas fa-arrow-left"></i>Takaisin</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @await Html.PartialAsync("_TuoteKorttiPartial", @Model.Tuote)
</div>

