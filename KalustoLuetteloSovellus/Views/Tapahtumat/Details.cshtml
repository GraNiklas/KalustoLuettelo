@model KalustoLuetteloSovellus.Models.Tapahtuma

@{
    ViewData["Title"] = "Details";
}
<div class="ms-auto me-auto">
    <h1>Tiedot</h1>
    <div>
        <h4>Tapahtuma</h4>
        <hr />

        @* Tästä alkaa tapahtumatietojen katseluäkymä *@

        <dl class="row">
            <div class="col-md-2">
                <dt class="col-sm-2 text-nowrap">@Html.DisplayNameFor(model => model.AloitusPvm)</dt>
                <dd class="col-sm-10 text-nowrap">@Html.DisplayFor(model => model.AloitusPvm)</dd>
                <dt class="col-sm-2 text-nowrap">@Html.DisplayNameFor(model => model.LopetusPvm)</dt>
                <dd class="col-sm-10 text-nowrap">@Html.DisplayFor(model => model.LopetusPvm)</dd>
                <dt class="col-sm-2 text-nowrap">@Html.DisplayNameFor(model => model.Kommentti)</dt>
                <dd class="col-sm-10 text-nowrap">@Html.DisplayFor(model => model.Kommentti)</dd>
                <dt class="col-sm-2 text-nowrap">@Html.DisplayNameFor(model => model.Käyttäjä)</dt>
                <dd class="col-sm-10 text-nowrap">@Html.DisplayFor(model => model.Käyttäjä.Käyttäjätunnus)</dd>
                <dt class="col-sm-2 text-nowrap">@Html.DisplayNameFor(model => model.Tuote)</dt>
                <dd class="col-sm-10 text-nowrap">@Html.DisplayFor(model => model.Tuote.Kuvaus)</dd>
                <dt class="col-sm-2 text-nowrap">@Html.DisplayNameFor(model => model.Tuote.IdNumero)</dt>
                <dd class="col-sm-10 text-nowrap">@Html.DisplayFor(model => model.Tuote.IdNumero)</dd>
            </div>
        </dl>
    </div>
    <div class="mb-4">
        @if (RoleHelper.IsUser(Model.KäyttäjäId, Context) || RoleHelper.IsAdmin(Context))
        {
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.TapahtumaId"><i class="fas fa-edit"></i>Muokkaa</a>
        }
        else
        {
            <a class="btn btn-primary disabled" asp-action="Edit" asp-route-id="@Model?.TapahtumaId"><i class="fas fa-edit"></i>Muokkaa</a>
            
        }
        <button class="btn btn-secondary " onclick="window.history.back()"><i class="fas fa-arrow-left"></i>Takaisin</button>
    </div>
</div>
