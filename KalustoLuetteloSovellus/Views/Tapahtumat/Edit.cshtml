@model KalustoLuetteloSovellus.Models.Tapahtuma

@{
    ViewData["Title"] = "Edit";
}

<div class="ms-auto me-auto">
    <h1>Muokkaa</h1>
    <h4>Tapahtuma</h4>
    <hr />

    @* Tästä alkaa tapahtuman muokkausäkymä *@

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TapahtumaId" />
                <div class="form-group">
                    @* <label asp-for="TuoteId" class="control-label fw-bold text-start w-100"></label> *@
                    @* <p class="m-0">Tuotekuvaus</p> *@
                    <select asp-for="TuoteId" hidden class="form-control" asp-items="ViewBag.TuoteId"></select>
                    <span asp-validation-for="TuoteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @* <label asp-for="AloitusPvm" class="control-label fw-bold text-start w-100"></label> *@
                    <input asp-for="AloitusPvm" hidden class="form-control mb-2" type="date" />
                    <span asp-validation-for="AloitusPvm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LopetusPvm" class="control-label fw-bold text-start w-100"></label>
                    <input asp-for="LopetusPvm" class="form-control mb-2" type="date" />
                    <span asp-validation-for="LopetusPvm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Kommentti" class="control-label fw-bold text-start w-100"></label>
                    <textarea asp-for="Kommentti" class="form-control mb-2"></textarea>
                    <span asp-validation-for="Kommentti" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @* <label asp-for="KäyttäjäId" class="control-label fw-bold text-start w-100"></label> *@
                    <select asp-for="KäyttäjäId" hidden class="form-control mb-2" asp-items="ViewBag.KäyttäjäId"></select>
                    <span asp-validation-for="KäyttäjäId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StatusId" class="control-label fw-bold text-start w-100"></label>
                    <select asp-for="StatusId" class="form-control mb-2" asp-items="ViewBag.StatusId"></select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>
                <div class="d-flex mt-2 gap-2 mb-4">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Tallenna</button>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-secondary" onclick="window.history.back()"><i class="fas fa-arrow-left"></i> Takaisin</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
