@model KalustoLuetteloSovellus.Models.Tapahtuma

@{
    ViewData["Title"] = "Edit";
}

<h1>Muokkaa</h1>

<h4>Tapahtuma</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TapahtumaId" />
            <div class="form-group">
                @* <label asp-for="TuoteId" class="control-label"></label> *@
                <p class="m-0">Tuotekuvaus</p>
                <select asp-for="TuoteId" class="form-control" asp-items="ViewBag.TuoteId"></select>
                <span asp-validation-for="TuoteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AloitusPvm" class="control-label"></label>
                <input asp-for="AloitusPvm" class="form-control" type="date" />
                <span asp-validation-for="AloitusPvm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LopetusPvm" class="control-label"></label>
                <input asp-for="LopetusPvm" class="form-control" type="date" />
                <span asp-validation-for="LopetusPvm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kommentti" class="control-label"></label>
                <input asp-for="Kommentti" class="form-control" />
                <span asp-validation-for="Kommentti" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KäyttäjäId" class="control-label"></label>
                <select asp-for="KäyttäjäId" class="form-control" asp-items="ViewBag.KäyttäjäId"></select>
                <span asp-validation-for="KäyttäjäId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="d-flex mt-2">
                <div class="form-group">
                    <div class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        <input type="submit" value="Tallenna" style="background:none;border:none;color:white" />
                    </div>
                </div>
                <div>
                    <a class="btn btn-secondary ms-2" asp-controller="Tapahtumat" asp-action="ReturnToPreviousPage"><i class="fas fa-arrow-left"></i>Takaisin</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
