@model KalustoLuetteloSovellus.Models.Toimipiste

@{
    ViewData["Title"] = "Create";
}
<div class="ms-auto me-auto">
    <h1>Uusi toimipiste</h1>

    <h4>Toimipiste</h4>
    <hr />

    @* Tästä alkaa uuden tapahtuman lisäysnäkymä *@

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Kaupunki" class="control-label"></label>
                        <input asp-for="Kaupunki" class="form-control" />
                        <span asp-validation-for="Kaupunki" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ToimipisteNimi" class="control-label"></label>
                        <input asp-for="ToimipisteNimi" class="form-control" />
                        <span asp-validation-for="ToimipisteNimi" class="text-danger"></span>
                    </div>
                    <div class="d-flex mt-2 gap-2 mb-4">
                        <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Tallenna</button>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-secondary" onclick="window.history.back()"><i class="fas fa-arrow-left"></i> Takaisin</button>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
