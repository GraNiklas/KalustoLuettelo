@model KalustoLuetteloSovellus.Models.Toimipiste

@{
    ViewData["Title"] = "Details";
}
<div class="ms-auto me-auto">
    <h1>Tiedot</h1>
    <h4>Status</h4>
    <hr />

    @* Tästä alkaa tapahtumatietojen katseluäkymä *@

    <dl class="row">
        <div class="col-md-2">
            <dt class="col-sm-4 text-center text-nowrap">@Html.DisplayNameFor(model => model.Oppilaitos)</dt>
            <dd class="col-sm-8 text-center text-nowrap mb-4">@Html.DisplayFor(model => model.Oppilaitos)</dd>

            <dt class="col-sm-4 text-center text-nowrap">@Html.DisplayNameFor(model => model.Kaupunki)</dt>
            <dd class="col-sm-8 text-center text-nowrap mb-4">@Html.DisplayFor(model => model.Kaupunki)</dd>

            <dt class="col-sm-4 text-center text-nowrap">@Html.DisplayNameFor(model => model.ToimipisteNimi)</dt>
            <dd class="col-sm-8 text-center text-nowrap mb-4">@Html.DisplayFor(model => model.ToimipisteNimi)</dd>
        </div>
    </dl>

    <div class="text-center">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ToimipisteId"><i class="fas fa-edit"></i> Muokkaa</a>
    <button class="btn btn-secondary" onclick="window.history.back()"><i class="fas fa-arrow-left"></i> Takaisin</button>
    </div>
</div>



