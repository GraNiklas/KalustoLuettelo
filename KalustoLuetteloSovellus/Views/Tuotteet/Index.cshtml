@model IEnumerable<KalustoLuetteloSovellus.Models.Tuote>

@{
    ViewData["Title"] = "Index";
}

@section scripts {
<script type="text/javascript">
    $(function () {
    $(".showItemClass").click(function () {
    let tuoteId = $(this).data("itemid");
    });
    });
</script>
}

<h1>Tuotteet</h1>
<h2>Haitarin muokkaus aloitettu....</h2>

<p>
    <a class="btn btn-main" asp-action="Create"><i class="fa fa-plus-circle"></i> Lisää uusi</a>
</p>
<i class="fa fa-sort-amount-asc"></i> Järjestä hinnan mukaan



<div class="container-fluid">

    <div class="card-header">
        <a>
            <form>
                <div class="input-group mb-2" style="display: flex;">
                    <span class="input-group-text bg-warning font-weight-bold" style="flex: 1;">TuoteId</span>
                    <input type="text" class="form-control bg-warning font-weight-bold" value="IdNumero" disabled style="flex: 2;">
                    <input type="text" class="form-control bg-warning font-weight-bold" value="Kuva" disabled style="flex: 1;">
                    <input type="text" class="form-control bg-warning font-weight-bold" value="Kuvaus" disabled style="flex: 3;">
                    <input type="text" class="form-control bg-warning font-weight-bold" value="OstoPvm" disabled style="flex: 2;">
                    <input type="text" class="form-control bg-warning font-weight-bold" value="Hinta" disabled style="flex: 1;">
                    <input type="text" class="form-control bg-warning font-weight-bold" value="Takuu" disabled style="flex: 2;">
                    <input type="text" class="form-control bg-warning font-weight-bold" value="Kategoria" disabled style="flex: 2;">
                    <input type="text" class="form-control bg-warning font-weight-bold" value="Toimipiste" disabled style="flex: 3;">
                    <input type="text" class="form-control bg-warning font-weight-bold" value="Aktiivinen" disabled style="flex: 2;">
                </div>
            </form>
        </a>
    </div>

    <div id="accordion">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-header">
                    <a style="text-decoration: none; color: inherit;" data-orderid="@item.TuoteId" data-bs-toggle="collapse" href="#collapse_@item.TuoteId">
                        <form>
                            <div class="input-group mb-1" style="display: flex;">
                                <span class="input-group-text bg-white" style="flex: 1;">@item.TuoteId</span>
                                <input type="text" class="form-control bg-white" value="@item.IdNumero" disabled style="flex: 2;">

                                <div style="flex: 1; display: flex; align-items: center; justify-content: center;padding: 0.375rem 0.75rem; border: 1px solid #ced4da; height: 38px; border-radius: 0.25rem; background-color: white;">
                                    @if (item.Kuva != null && item.Kuva.Length > 0)
                                    {
                                        <img style="width: 35px; height: 35px; object-fit: cover;" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Kuva)" />
                                    }
                                    else
                                    {
                                        <img style="width: 35px; height: 35px; object-fit: cover;" src="~/Images/OletusKuva.png" />
                                    }
                                </div>

                                <input type="text" class="form-control bg-white" value="@item.Kuvaus" disabled style="flex: 3;">
                                <input type="text" class="form-control bg-white" value="@item.OstoPvm" disabled style="flex: 2;">
                                <input type="text" class="form-control bg-white" value="@item.Hinta" disabled style="flex: 1;">
                                <input type="text" class="form-control bg-white" value="@item.Takuu" disabled style="flex: 2;">
                                <input type="text" class="form-control bg-white" value="@item.Kategoria?.KategoriaNimi" disabled style="flex: 2;">
                                <input type="text" class="form-control bg-white" value="@item.Toimipiste?.ToimipisteNimi" disabled style="flex: 3;">
                                <input type="text" class="form-control bg-white" value="@item.Aktiivinen" disabled style="flex: 2;">
                            </div>
                        </form>
                    </a>
                </div>
                <div id="collapse_@item.TuoteId" class="collapse" data-bs-parent="#accordion" aria-labelledby="heading_@item.TuoteId">
                    <div class="card-body">
                        <p> Ladataan tuotteiden @item.TuoteId rivit </p>
                        @await Html.PartialAsync("_TapahtumaRivitPartial", item.Tapahtumat)
                    </div>
                </div>
            </div>
        }
    </div>
</div>



